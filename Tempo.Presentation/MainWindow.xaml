<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
        x:Class="Tempo.Presentation.MainWindow"
        Title="MainWindow" Height="400" Width="550">

    <Grid>
        <ListBox Margin="8,0,8,10" ItemsSource="{Binding SongsList}" SelectedItem="{Binding SelectedSong}" Height="231" ScrollViewer.VerticalScrollBarVisibility="Disabled" VerticalAlignment="Bottom">

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>
        <Button Name="ImportButton" Click="ImportButton_OnClick" Content="Import" HorizontalAlignment="Left" Margin="431,35,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Name="PlayButton" Click="PlayButton_OnClick" Content="Play" HorizontalAlignment="Left" Margin="342,35,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
